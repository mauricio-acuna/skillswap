# Environment Variables Template for SkillSwap Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/skillswap_prod
DATABASE_USERNAME=skillswap_user
DATABASE_PASSWORD=your_database_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Security
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_256_bits_long

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# External Services
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@skillswap.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://skillswap.com,https://www.skillswap.com

# Server Configuration
SERVER_PORT=8080

# File Upload
UPLOAD_DIR=./uploads
